<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <AssemblyName>RLBotServer</AssemblyName>
    <PublishAot>true</PublishAot>
    <OptimizationPreference>Speed</OptimizationPreference>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Tomlyn" Version="0.17.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.FlatBuffers" Version="24.3.25" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="FlatBuffer\" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="RLBotSecret">
      <HintPath>RLBotSecret.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <DirectPInvoke Include="rl_ball_sym" />

    <NativeLibrary Include=".\lib\rl_ball_sym.lib" Condition="$(RuntimeIdentifier.StartsWith('win'))" />
    <NativeLibrary Include="./lib/librl_ball_sym.a" Condition="!$(RuntimeIdentifier.StartsWith('win'))" />
  </ItemGroup>

</Project>
